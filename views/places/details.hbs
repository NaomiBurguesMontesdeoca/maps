<h2>Detalles de {{ place.name }}</h2>

<p> Nombre: {{ place.name }} </p>

<p> Tipo: {{ place.type }} </p>

<figure id="myMap"></figure>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/placesMap.js"></script>

<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCbBJPvYIaR5ozIx_0-uWiGeO9cK4IxHww&callback=initMap"></script>

<a href="/places/update/{{place.id}}" class="btn btn-dark">Editar negocio</a>

<form action="/places/delete/{{place.id}}" method="POST">
    <input type="submit" value="Eliminar negocio" class="btn btn-danger" style="display: inline">
</form>